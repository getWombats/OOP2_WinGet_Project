<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.hftm.oop2_winget_project.Controller.SearchPackagesController">
    <top>
        <HBox prefHeight="50.0" spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="200.0" spacing="20.0">
                    <children>
                        <TextField fx:id="keywordTextField" prefWidth="220.0" promptText="Enter Keyword" stylesheets="@../CSS/DarkTheme.css" />
                        <Button mnemonicParsing="false" onAction="#searchButtonClick" styleClass="searchButton" stylesheets="@../CSS/DarkTheme.css" text="Search package" />
                  <Button mnemonicParsing="false" onAction="#testButtonClick" text="Test your function" />
                    </children>
                </HBox>
            <ComboBox fx:id="comboBox_selectPackageList" prefWidth="150.0" promptText="Select List" />
                <Button fx:id="button_addPackageToList" mnemonicParsing="false" onAction="#button_addPackageToList" text="Add to List" visible="false" />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tableView" editable="true" styleClass="searchTableView" stylesheets="@../CSS/DarkTheme.css" BorderPane.alignment="TOP_LEFT">
            <columns>
                <TableColumn fx:id="column_favourite" editable="false" minWidth="30.0" prefWidth="50.0" resizable="false" sortable="false" />
                <TableColumn fx:id="column_name" editable="false" minWidth="220.0" prefWidth="-1.0" resizable="false" text="Name" />
                <TableColumn fx:id="column_id" editable="false" minWidth="220.0" prefWidth="-1.0" resizable="false" text="ID" />
                <TableColumn fx:id="column_version" editable="false" minWidth="350.0" prefWidth="-1.0" resizable="false" text="Version" />
                <TableColumn fx:id="column_source" editable="false" minWidth="150.0" prefWidth="-1.0" resizable="false" text="Source" />
            <TableColumn fx:id="column_button_install" minWidth="130.0" prefWidth="-1.0" resizable="false" />
            </columns>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
