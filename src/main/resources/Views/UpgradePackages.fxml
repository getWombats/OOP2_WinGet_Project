<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.hftm.oop2_winget_project.Controller.UpgradePackagesController">
    <top>
        <HBox prefHeight="50.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#getAvailableUpdates" styleClass="refreshButton" stylesheets="@../CSS/DarkTheme.css" text="Show available Updates" />
                        <TextField fx:id="textfield_filter" promptText="Filter Packages" stylesheets="@../CSS/DarkTheme.css" />
                        <ComboBox fx:id="comboBox_filter" prefWidth="150.0" stylesheets="@../CSS/DarkTheme.css" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="upgradePackagesTableView" prefHeight="200.0" styleClass="upgradeTableView" stylesheets="@../CSS/DarkTheme.css" BorderPane.alignment="TOP_LEFT">
            <columns>
                <TableColumn fx:id="nameColumn" editable="false" minWidth="220.0" prefWidth="-1.0" resizable="false" text="Package Name" />
                <TableColumn fx:id="idColumn" editable="false" minWidth="220.0" prefWidth="-1.0" resizable="false" text="Package ID" />
                <TableColumn fx:id="installedVersionColumn" editable="false" minWidth="250.0" prefWidth="-1.0" resizable="false" text="Installed Version" />
            <TableColumn fx:id="availableVersionColumn" editable="false" minWidth="250.0" prefWidth="-1.0" resizable="false" text="Available Version" />
                <TableColumn fx:id="sourceColumn" editable="false" minWidth="150.0" prefWidth="-1.0" resizable="false" text="Source" />
            <TableColumn fx:id="actionColumn" minWidth="130.0" prefWidth="-1.0" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
